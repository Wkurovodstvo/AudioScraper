{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "build/dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@page/*": ["./src/page/*"],
      "@redux/*": ["./src/redux/*"],
      "@util/*": ["./src/util/*"],
      "@webApi/*": ["./src/webApi/*"],
      "@style/*": ["./src/style/*"],
      "@router/*": ["./src/router/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config",
    "webpack",
    "jest"
  ]
}
